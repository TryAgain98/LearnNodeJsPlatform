extends ./layouts/common.pug
block content
		
		a.btn.btn-primary(href="/user/create") create
		form(action="/user/search", method="GET",class="d-flex")
			input(type="text",name="name",class="form-control",
			value = name)
			button(class="btn btn-primary ml-2") search

		table.table
			tr
				th Name
				th Phone
				th Actions
			each user in users
				tr
					td= user.name
					td= user.phone
					td
						a.btn.btn-success(href='/user/'+ user.id) View
		
