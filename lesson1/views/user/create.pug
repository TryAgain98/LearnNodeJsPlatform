extends ../layouts/common.pug
block content
	h1 Create
	if errors
		each error in errors
			alert.alert-danger=error
				br
	form(action="/user/create",method="POST")
		.form-group
			label(for="name") Name
			input#name(type="text",name="name",class="form-control ",value=values?values.name:'')
		.form-group
			label(for="phone") Phone
			input#phone(type="text",name="phone",class="form-control ",value=values?values.phone:'')
		button.btn.btn-primary.mt-2 Create